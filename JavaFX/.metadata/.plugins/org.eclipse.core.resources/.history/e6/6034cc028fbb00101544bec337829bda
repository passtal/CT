    /**
     * 데이터 초기화
     */
    
    void initData() {
    	MENU_LIST = new ArrayList<Menu>();
    	List<String> nameList
    	= Arrays.asList("국밥", "라면", "볶음밥", "부대찌개", "분식", "경양식돈까스", "일식돈까스",
